extends layout

block content
  h1= title
  p Below are some aura search results:

  .container
    .row
      each aura in results
        .col-md-4.mb-4
          .card.border.shadow-sm
            .card-body
              h5.card-title= aura.color
              p.card-text Intensity: #{aura.intensity}
              p.card-text Emotion: #{aura.emotion_associated}

  p.mt-4
    a(href="/") Back to Home
